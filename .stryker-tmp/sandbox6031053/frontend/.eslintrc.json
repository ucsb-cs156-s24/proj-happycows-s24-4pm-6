{
    "root": true,
    "extends": [
        "react-app",
        "react-app/jest"
    ],
    "env": {
        "browser": true
    },
    "overrides": [
        {
            "files": [
                "src/stories/**",
                "src/test/**/*.js"
            ],
            "rules": {
                "import/no-anonymous-default-export": "off"
            },
            "env": {
                "node": true,
                "jest": true
            }
        }
    ],
    "rules": {
        "no-unused-vars": [
            "error",
            {
                "vars": "all",
                "varsIgnorePattern": "^_",
                "args": "all",
                "argsIgnorePattern": "^_",
                "ignoreRestSiblings": true
            }
        ]
    }
}